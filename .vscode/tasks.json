{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-fdiagnostics-color",
                "-std=c++20",
                "-I${workspaceFolder}/includes",
                "-DCPP_SHELVE_STANDALONE_EDIT__",
